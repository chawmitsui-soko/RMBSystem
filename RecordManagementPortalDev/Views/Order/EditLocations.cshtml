@model RecordManagementPortalDev.Controllers.OrderController.JobCollect
@{
    ViewData["Title"] = "EditLocations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="EditLocations">
    @* <input asp-for="@Model.CartonDetails.JobNo" hidden /> *@
    <h4 class="mt-3">Edit Locations</h4>
    <div class="border p-3 mt-4">
        <div class="form-group row mt-3">
            <div class="col-sm-6">
                <div class="row">
                    <div class="form-group row mt-4">
                        <div class="btn-group mt-3">
                            <input type="text" class="form-control" value="@ViewData["JobNo"]" name="JobNo" placeholder="Job No" aria-label="Job No" aria-describedby="button-search">
                            <input type="submit" class="btn btn-outline-warning" value="Search" />
                        </div>
                    </div>
                    @if (Model != null)
                    {
                        if (Model.ListCartonDtl != null && Model.ListCartonDtl.Count != 0)
                        {
                            <h4 class="mt-3">Locations</h4>
                            <table class="nth-table table table-hover pt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">Customer Code</th>
                                        <th scope="col">Department Code</th>
                                        <th scope="col">Record Number</th>
                                        <th scope="col">Job Number</th>
                                        <th scope="col">Location</th>
                                    </tr>
                                </thead>
                                <tbody id="job">
                                    @{
                                        long rowCount = 0;
                                    }
                                    @foreach (var obj in Model?.ListCartonDtl)
                                    {
                                        rowCount = rowCount + 1;
                                        <tr>
                                            <td scope="row">@rowCount</td>
                                            <td>@obj.CustCode</td>
                                            <td>@obj.DeptCode</td>
                                            <td>@obj.Cartons</td>
                                            <td>@obj.JobNo</td>
                                            <td>@obj.Location</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    }
                    <div class="form-group row mt-4">
                        <label class="col-sm-3 col-form-label">New Location: </label>
                        <div class="col-sm-9">
                            <input value="@ViewData["Location"]" type="text" class="form-control" name="Location">
                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <div class="col-sm-5">
                            <button type="submit" class="btn btn-outline-warning mt-3">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
    </script>
}
<div class="mb-10">
    &nbsp;
</div>


